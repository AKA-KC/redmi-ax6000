# =========================================================
# 目标设备: Redmi AX6000 (MT7986)
# =========================================================
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_mt7986=y
CONFIG_TARGET_mediatek_mt7986_DEVICE_xiaomi_redmi-router-ax6000=y

# =========================================================
# 1. 网络加速 (核心功能)
# =========================================================
# TurboACC 网络加速 (已开启)
CONFIG_PACKAGE_luci-app-turboacc=y
CONFIG_PACKAGE_kmod-mediatek_hnat=y
CONFIG_PACKAGE_kmod-tcp-bbr=y
CONFIG_PACKAGE_kmod-crypto-hw-safexcel=y

# =========================================================
# 2. 你的核心插件 (Nikki / 组网 / DDNS)
# =========================================================
CONFIG_PACKAGE_luci-app-nikki=y
CONFIG_PACKAGE_nikki=y
CONFIG_PACKAGE_luci-app-zerotier=y
CONFIG_PACKAGE_zerotier=y
CONFIG_PACKAGE_luci-app-tailscale=y
CONFIG_PACKAGE_tailscale=y
CONFIG_PACKAGE_luci-app-ddns-go=y
CONFIG_PACKAGE_ddns-go=y

# =========================================================
# 3. 负载均衡 (MWAN3 全家桶) <--- 这里改了
# =========================================================
# 界面
CONFIG_PACKAGE_luci-app-mwan3=y
# 核心 (其实会自动选，但写上也无妨)
CONFIG_PACKAGE_mwan3=y
# 中文语言包 (确保界面是中文)
CONFIG_PACKAGE_luci-i18n-mwan3-zh-cn=y

# =========================================================
# 4. 实用增强功能
# =========================================================
CONFIG_PACKAGE_luci-app-upnp=y
CONFIG_PACKAGE_luci-proto-wireguard=y
CONFIG_PACKAGE_kmod-wireguard=y
CONFIG_PACKAGE_wireguard-tools=y
CONFIG_PACKAGE_openssh-sftp-server=y
CONFIG_PACKAGE_zram-swap=y

# =========================================================
# 5. 主题与界面 (Argon 全家桶)
# =========================================================
CONFIG_PACKAGE_luci-theme-argon=y
CONFIG_PACKAGE_luci-app-argon-config=y
CONFIG_PACKAGE_luci-app-ttyd=y
CONFIG_PACKAGE_htop=y

# =========================================================
# 6. 系统底层修正 (OpenSSL)
# =========================================================
CONFIG_PACKAGE_wpad-openssl=y
# CONFIG_PACKAGE_wpad-basic-mbedtls is not set
CONFIG_PACKAGE_libustream-openssl=y
# CONFIG_PACKAGE_libustream-mbedtls is not set
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_wget-ssl=y

# =========================================================
# 7. 移除列表 (确保纯净)
# =========================================================
